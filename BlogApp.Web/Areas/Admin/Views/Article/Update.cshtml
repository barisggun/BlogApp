@{
    Layout = "_Layout";
}

@model List<ArticleUpdateDto>


<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card">
        <h5 class="card-header">Makalaler</h5>
        <div class="table-responsive text-nowrap m-3">
            <a asp-area="Admin" asp-controller="Article" asp-action="Add" class="btn btn-success mb-3 ms-1">Makaleyi Düzenle <i class="bx bx-plus"></i></a>
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Oluşturan</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Oluşturan</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr name="@item.Id">
                        <td>@item.Title</td>
                        <td>@item.Category.Name</td>
                        <td>@item.CreatedDate.ToShortDateString()</td>
                        <td>@item.CreatedBy</td>
                        <td>@(item.IsDeleted ? "Aktif değildir" : "Aktif")</td>
                        <td>
                            <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-articleId="@item.Id"><i class="bx bxs-edit"></i></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/article.js" type="application/ecmascript"></script>
}